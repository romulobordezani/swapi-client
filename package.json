{
  "name": "swapi-client",
  "version": "0.0.1",
  "description": "Web Client for SWAPI - The Star Wars API",
  "homepage": "https://swapi-client-git-main-romulobordezani.vercel.app",
  "private": true,
  "scripts": {
    "build": "yarn workspaces run build",
    "test": "wsrun --parallel test",
    "lint": "eslint \"packages/**/*.ts{,x}\" --fix",
    "prettier-format": "prettier --config .prettierrc 'packages/**/*.ts' --write",
    "serve": "wsrun --parallel serve",
    "start": "concurrently \"wsrun --parallel start\" \"wsrun --parallel serve\"",
    "lists": "tsc",
    "clean": "rm -rf ./node_modules && rm -rf ./packages/host/node_modules && rm -rf ./packages/design-system/node_modules",
    "generate-env-file": "echo \"HOST_URL=http://localhost:3000\r\nDS_URL=http://localhost:4000\r\nFILMS_URL=http://localhost:4001\" > .env"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/romulobordezani/swapi-client.git"
  },
  "author": "romulobordezani",
  "engines": {
    "node": ">=18.12.1"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "7.6.0",
    "wsrun": "5.2.4"
  },
  "packageManager": "yarn@1.22.19"
}
