{
  "compilerOptions": {
    "target": "ESNext",
    "rootDirs": ["packages/host", "packages/design-system"],
    "module": "umd",
    "lib": ["ESNext", "dom"],
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports" : true,
    "typeRoots": [
      "node_modules/@types",
      "packages/host/node_modules/@types",
      "packages/design-system/node_modules/@types"
    ],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "types": [
      "node",
      "@testing-library/jest-dom",
      "cypress",
      "@testing-library/cypress",
      "@emotion/react/types/css-prop"
    ]
  },
  "exclude": [".vscode", "node_modules/*", "**/node_modules/*", "**/dist/*", "**/*.cy.tsx"],
  "include": [
    "packages/**/*",
    "custom.d.ts"
  ]
}