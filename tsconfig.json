{
  "compilerOptions": {
    "target": "ESNext",
    "rootDirs": ["packages/host", "packages/design-system"],
    "module": "umd",
    "lib": ["ESNext", "dom"],
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports" : true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "packages/host/node_modules/@types",
      "packages/design-system/node_modules/@types"
    ],
    "esModuleInterop": true,
    "paths": {
      "@dsTypes/*": [
        "./packages/host/@mf-types/DesignSystem/_types/*"
      ],
      "@hostTypes/*": [
        "./packages/design-system/@mf-types/Host/_types/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "types": [
      "@testing-library/jest-dom",
      "cypress",
      "@testing-library/cypress",
      "@emotion/react/types/css-prop"
    ],
  },
  "exclude": [".vscode", "node_modules/*", "**/node_modules/*", "**/dist/*", "**/*.cy.tsx"],
  "include": [
    "packages/host/**/*",
    "packages/design-system/**/*"
  ]
}